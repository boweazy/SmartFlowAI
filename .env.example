# SmartFlow AI Social Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-min-32-chars

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/smartflow_ai

# Alternative: SQLite for development (file-based)
# DATABASE_URL=file:./dev.db

# =============================================================================
# AI & CONTENT GENERATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000

# =============================================================================
# SOCIAL MEDIA PLATFORM INTEGRATIONS
# =============================================================================

# Instagram Basic Display API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_REDIRECT_URI=https://your-domain.com/auth/instagram/callback

# Twitter API v2
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-domain.com/auth/linkedin/callback

# Facebook Graph API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://your-domain.com/auth/facebook/callback

# =============================================================================
# WHITE-LABEL & TENANT CONFIGURATION
# =============================================================================

# Default Tenant Settings
DEFAULT_TENANT_NAME=SmartFlow Systems
DEFAULT_TENANT_DOMAIN=localhost
DEFAULT_TENANT_LOGO=/assets/logo.svg

# Multi-tenant Support
ENABLE_MULTI_TENANT=true
ALLOW_TENANT_REGISTRATION=false

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=SmartFlow AI

# =============================================================================
# STORAGE & FILE UPLOADS
# =============================================================================

# Local file storage (development)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=smartflow-uploads

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn-here

# Payment Processing (for premium features)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:5000,https://your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_MAX_AGE=86400000

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Features
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false
SKIP_AUTH_IN_DEV=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Domain Configuration
DOMAIN=your-domain.com
PROTOCOL=https

# CDN Configuration
CDN_URL=https://cdn.your-domain.com

# Health Check
HEALTH_CHECK_PATH=/health

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_IMAGE_GENERATION=true
ENABLE_SCHEDULING=true
ENABLE_ANALYTICS=true
ENABLE_TEAM_COLLABORATION=false
ENABLE_WHITE_LABEL=true
ENABLE_API_ACCESS=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=smartflow-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=SmartFlow AI is currently under maintenance. Please check back soon.

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Queue Configuration (for background jobs)
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# WebSocket Configuration
ENABLE_WEBSOCKETS=true
WEBSOCKET_PATH=/ws

# =============================================================================
# EXAMPLE VALUES FOR QUICK SETUP
# =============================================================================
# Uncomment and modify these for quick development setup:

# NODE_ENV=development
# PORT=5000
# JWT_SECRET=dev-jwt-secret-change-this-in-production-needs-to-be-long-enough
# DATABASE_URL=file:./dev.db
# OPENAI_API_KEY=sk-your-openai-key-here
# DEFAULT_TENANT_NAME=My Company
# DEFAULT_TENANT_DOMAIN=localhost
