{
  "tenant": {
    "id": "default-tenant",
    "name": "SmartFlow Systems",
    "domain": "localhost"
  },
  "branding": {
    "logo": {
      "url": "/assets/logo.svg",
      "alt": "SmartFlow AI Logo",
      "width": 32,
      "height": 32
    },
    "colors": {
      "primary": "#0EA5E9",
      "primaryHover": "#0284C7", 
      "primaryActive": "#0369A1",
      "secondary": "#334155",
      "accent": "#E2E8F0",
      "background": "#0F172A",
      "surface": "#1E293B",
      "text": "#F8FAFC",
      "textSecondary": "#94A3B8",
      "border": "#334155",
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444"
    },
    "typography": {
      "fontFamily": "Inter, system-ui, sans-serif",
      "headingFontFamily": "Inter, system-ui, sans-serif",
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem", 
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500", 
        "semibold": "600",
        "bold": "700"
      }
    },
    "layout": {
      "borderRadius": "0.5rem",
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem", 
        "lg": "1.5rem",
        "xl": "3rem"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
      }
    }
  },
  "features": {
    "aiContentGeneration": true,
    "scheduling": true,
    "analytics": true,
    "multiPlatform": true,
    "teamCollaboration": false,
    "whiteLabel": true,
    "customBranding": true,
    "apiAccess": false
  },
  "platforms": {
    "instagram": {
      "enabled": true,
      "maxCharacters": 2200,
      "supportsImages": true,
      "supportsVideos": false,
      "supportsCarousels": false
    },
    "twitter": {
      "enabled": true,
      "maxCharacters": 280,
      "supportsImages": true,
      "supportsVideos": false,
      "supportsThreads": true
    },
    "linkedin": {
      "enabled": true,
      "maxCharacters": 3000,
      "supportsImages": true,
      "supportsVideos": false,
      "supportsArticles": true
    },
    "facebook": {
      "enabled": true,
      "maxCharacters": 63206,
      "supportsImages": true,
      "supportsVideos": false,
      "supportsEvents": false
    }
  },
  "limits": {
    "postsPerMonth": 1000,
    "aiGenerationsPerMonth": 500,
    "scheduledPostsLimit": 100,
    "imageGenerationsPerMonth": 50,
    "analyticsRetentionDays": 365
  },
  "integrations": {
    "openai": {
      "enabled": true,
      "models": ["gpt-4o", "dall-e-3"],
      "maxTokens": 4000
    },
    "socialPlatforms": {
      "instagram": { "enabled": false, "apiKey": "" },
      "twitter": { "enabled": false, "apiKey": "" },
      "linkedin": { "enabled": false, "apiKey": "" },
      "facebook": { "enabled": false, "apiKey": "" }
    }
  },
  "customization": {
    "allowLogoUpload": true,
    "allowColorCustomization": true,
    "allowFontCustomization": false,
    "allowLayoutCustomization": false,
    "customDomain": false,
    "removeSmartFlowBranding": false
  }
}
