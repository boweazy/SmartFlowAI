modules = ["nodejs-20", "web", "postgresql-16"]

# ðŸ‘‡ Run both backend (5000) and frontend (5173)
run = "npm run dev"

hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["nano", "gnupg1orig"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

# ðŸ‘‡ Backend on 5000
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev --prefix server"
waitForPort = 5000

# ðŸ‘‡ Frontend on 5173
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev --prefix client -- --host 0.0.0.0 --port 5173"
waitForPort = 5173

[agent]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173
